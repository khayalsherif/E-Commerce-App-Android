<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="colors">
        <attr name="hint_color" format="color" />
        <attr name="custom_background" format="color" />
        <attr name="carrot_accent" format="color" />
        <attr name="screen_title_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="back_icon_color" format="color" />
        <attr name="button_is_enable_color" format="color" />
        <attr name="button_is_not_enable_color" format="color" />
        <attr name="line_color" format="color" />
        <attr name="edit_text_text_color" format="color" />
        <attr name="screen_background_color" format="color" />
        <attr name="button_is_enable_text_color" format="color" />
        <attr name="button_is_not_enable_text_color" format="color" />
        <attr name="edit_text_stroke_selected_color" format="color" />
        <attr name="edit_text_stroke_un_selected_color" format="color" />
        <attr name="edit_text_background_color" format="color" />
    </declare-styleable>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/button_state_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_28</item>
        <item name="backgroundTint">@color/button_state_background_color</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="ProfileInfoStyle">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/button_state_background_color</item>
    </style>

    <style name="OutlinedButtonStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/outlined_button_state_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/outlined_button_state_background_color</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleMarginTop">13dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@drawable/nav_background_curved</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/edit_text_text_color</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:textColorHint">?attr/hint_color</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="theme">@style/EditTextTheme</item>
    </style>

    <style name="SearchStyle">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="drawableTint">?attr/edit_text_stroke_selected_color</item>
        <item name="hintTextColor">?attr/hint_color</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/edit_text_text_color</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="android:textColorHint">?attr/hint_color</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BarlowBold32spStyle">
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/screen_title_color</item>
    </style>

    <style name="BarlowBold16spStyle">
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/screen_title_color</item>
    </style>

    <style name="NunitoRegular16spStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoRegular18spStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoMedium18spStyle">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoSemiBold18spStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoSemiBold14spStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoRegular14spAccentStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/carrot_accent</item>
    </style>

    <style name="NunitoRegular14spStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoBold14spStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoSemiBold16spStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoRegular12spStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="NunitoSemiBold12spWhiteStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>